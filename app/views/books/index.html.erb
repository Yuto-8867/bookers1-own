<body>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <div class="bool-lists">
    <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        <% @books.each do |book| %>
          <tr>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
            <th><%= link_to "Show",book_path(book) %></th>
            <th><%= link_to "Edit",edit_book_path(book) %></th>
            <th><%= link_to "Destroy",book_path(book),method: :delete,data: { confirm: 'Are you sure' } %></th>
          </tr>
        <% end %>
        </thead>
      </table>
  </div>

  <div class="new-book">
    <h2>New book</h2>
    <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
      <p>error!!</p>
      <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @book,local: true do |f| %>
      <p>Title</p>
      <p><%= f.text_field :title %></p>
      <p>Body</p>
      <p><%= f.text_area :body %></p>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
  </div>
</body>

