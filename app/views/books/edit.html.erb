<h1>Editing Book</h1>
  <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
      <p>error!!</p>
      <%= message %>
      <% end %>
  <% end %>
<%= form_with model: @book,local: true do |f| %>
<p>Title</p>
<p><%= f.text_field :title %></p>
<p>Body</p>
<p><%= f.text_area :body %></p>
<p><%= f.submit "Update Book" %></p>
<% end %>

<p><%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %></p>